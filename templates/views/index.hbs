{{> header }}
<!-- Main content -->
<div class="main-content index">
  <div class="tag-bar border-top border-bottom pt-2 pb-2 mb-3" title="Search by category">
    {{#if tags}}
      {{#each tags}}
        <span class="badge rounded-pill bg-light text-dark py-2 px-3" data-category="{{ this.name }}">{{ this.name }}</span>
      {{/each}}
    {{else}}
      <small class="fst-italic">Categories not found</small>
    {{/if}}
  </div>
  <h2 class="video-grid-title mb-4">Recent videos <small class="fw-light" title="Number of videos uploaded to the platform">{{#if videos.length }}({{ videos.length }}){{/if}}</small></h2>
  <div class="video-grid row animate__animated animate__fadeIn">
    {{#if videos.length }}
      {{#each videos}}
        {{> card layout="col-sm-6 col-lg-3 mb-3" }} 
      {{/each}}
    {{else}}
      <p class="fst-italic">No videos found... yet</p>
    {{/if}}
  </div>
</div>
{{> footer }}